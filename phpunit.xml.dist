        <file>./consentactivity.php</file>
        <file>./consentactivity.civix.php</file>
        <file>./CRM/Consentactivity/Upgrader/Base.php</file>
      </exclude>
    </whitelist>
  </filter>
  <listeners>
    <listener class="Civi\Test\CiviTestListener">
      <arguments/>
    </listener>
  </listeners>
</phpunit>
