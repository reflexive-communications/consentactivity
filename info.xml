<?xml version="1.0"?>
<extension key="consentactivity" type="module">
    <file>consentactivity</file>
    <name>Consent Activity</name>
    <description>Adds a GDPR consent activity after form submission or contribution, manages GDPR consents</description>
    <license>AGPL-3.0</license>
    <authors>
        <author>
            <name>Sandor Semsey</name>
            <email>sandor@es-progress.hu</email>
            <role>Maintainer</role>
        </author>
        <author>
            <name>akosgarai</name>
            <email>szlem01@gmail.com</email>
            <role>Developer</role>
        </author>
    </authors>
    <urls>
        <url desc="Main Extension Page">https://github.com/reflexive-communications/consentactivity</url>
        <url desc="Documentation">https://github.com/reflexive-communications/consentactivity</url>
        <url desc="Support">https://github.com/reflexive-communications/consentactivity/issues</url>
        <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
    </urls>
    <releaseDate>2023-01-25</releaseDate>
    <version>1.2.5</version>
    <develStage>stable</develStage>
    <compatibility>
        <ver>5.0</ver>
    </compatibility>
    <requires>
        <ext>rc-base</ext>
        <ext>org.civicrm.flexmailer</ext>
    </requires>
    <classloader>
        <psr0 prefix="CRM_" path=""/>
        <psr4 prefix="Civi\" path="Civi"/>
    </classloader>
    <civix>
        <namespace>CRM/Consentactivity</namespace>
    </civix>
</extension>
