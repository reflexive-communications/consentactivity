<?xml version="1.0"?>
<extension key="consentactivity" type="module">
    <file>consentactivity</file>
    <name>Consent Activity</name>
    <description>This extension provides an activity that is triggered after form submission or contribution.</description>
    <license>AGPL-3.0</license>
    <maintainer>
        <author>akosgarai</author>
        <email>szlem01@gmail.com</email>
    </maintainer>
    <urls>
        <url desc="Main Extension Page">https://github.com/reflexive-communications/consentactivity</url>
        <url desc="Documentation">https://github.com/reflexive-communications/consentactivity</url>
        <url desc="Support">https://github.com/reflexive-communications/consentactivity/issues</url>
        <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
    </urls>
    <releaseDate>2022-04-05</releaseDate>
    <version>1.2.2</version>
    <develStage>stable</develStage>
    <compatibility>
        <ver>5.0</ver>
    </compatibility>
    <requires>
        <ext>rc-base</ext>
        <ext>org.civicrm.flexmailer</ext>
    </requires>
    <comments>This civicrm extension provides an activity that is triggered after form submission or contribution.</comments>
    <classloader>
        <psr4 prefix="Civi\" path="Civi"/>
    </classloader>
    <civix>
        <namespace>CRM/Consentactivity</namespace>
    </civix>
</extension>
